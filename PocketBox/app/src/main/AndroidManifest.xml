<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kiwicai.pocketbox">
    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:resizeable="true"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/register_activity">
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/login_activity">
        </activity>
        <activity
            android:name=".ui.NewPostActivity"
            android:label="Pocket Box">
        </activity>
        <activity
            android:name=".ui.ViewPostActivity"
            android:label="Pocket Box">
        </activity>
        <activity
            android:name=".ui.EditActivity"
            android:label="Pocket Box"/>

        <activity
            android:name=".ui.MailMainActivity"
            android:label="Pocket Box"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.MailSetUpActivity">
        </activity>
        <activity android:name=".ui.MailDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.MailSendActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>
